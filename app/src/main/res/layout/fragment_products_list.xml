<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

        <ImageView
            android:id="@+id/image_products"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_room_service_black_24dp"/>
        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/image_products"
            android:id="@+id/products_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name of products"
            android:textColor="@color/LogoBackgroungBlue"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/products_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/LogoBackgroungBlue"
            app:layout_constraintLeft_toLeftOf="@id/products_name"
            app:layout_constraintTop_toBottomOf="@id/products_name"
            android:text="description"/>
</androidx.constraintlayout.widget.ConstraintLayout>